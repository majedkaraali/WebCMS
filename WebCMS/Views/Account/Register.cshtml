@{
    ViewData["Title"] = "Register";
}

<h2 class="text-center">Register</h2>
<form asp-action="Register" method="post" class="w-50 mx-auto border p-4 rounded shadow">
    <div class="mb-3">
        <label for="fullName" class="form-label">Full Name</label>
        <input type="text" name="fullName" id="fullName" class="form-control" required />
    </div>

    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" name="email" id="email" class="form-control" required />
    </div>

    <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" name="password" id="password" class="form-control" required />
    </div>

    <div class="mb-3">
     
        <input style="display:none;" name="role" id="role" value="Patient" class="form-select"></input>
    </div>

    <button type="submit" class="btn btn-success w-100">Register</button>
</form>

<p class="text-center mt-3">
    Already have an account? <a asp-action="Login">Login here</a>
</p>
