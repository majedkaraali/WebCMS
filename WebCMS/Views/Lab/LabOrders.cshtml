@model List<WebCMS.Models.LabOrder>
@{
    ViewData["Title"] = "Lab Orders";
}

<h1 class="text-center">Lab Orders</h1>
@if (Model != null && Model.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Test Wanted</th>
                <th>Patient Name</th>
                <th>Doctor Name</th>
                <th>Order Status</th>
                <th>Order Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Test.Name</td>
                <td>@order.Patient.FullName</td>
                <td>@order.Doctor.FullName</td>
                <td>@order.Status</td>
                <td>@order.CreatedDate</td>
                <td>
                    <a asp-action="PreformTests" asp-route-id="@order.Id" class="btn btn-info">View</a>
                    <a asp-action="DeleteOrder" asp-route-id="@order.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </table>
}
else
{
    <p>No lab orders available.</p>
}

