@model List<WebCMS.Models.Appointment>;


<h2><i class="bi bi-calendar-check section-icon"></i>Appointments and Scheduling</h2>


<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="table-primary">
            <tr>
                <th>Date/Time</th>
                <th>Reason</th>
                <th>Physician</th>
                <th>Duration</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        @if ( Model!=null && Model.Any())
        {
            foreach(var appoitment in Model)
            {

                <tr>
                    <td>@appoitment.AppointmentDate</td>
                    <td>@appoitment.ReasonForVisit</td>
                    <td>Dr. @appoitment.Doctor.FullName</td>
                    <td>30 min</td>

                        @if (appoitment.Status == "Completed")
                        {
                            <td><span class="badge bg-primary">@appoitment.Status</span></td>
                        }

                        else if (appoitment.Status == "Scheduled")
                        {
                            <td><span class="badge bg-warning">@appoitment.Status</span></td>
                        }

                        else if (appoitment.Status == "Scheduled")
                        {
                            <td><span class="badge bg-danger">@appoitment.Status</span></td>
                        }

                    <td>
                        <button class="btn btn-sm btn-outline-primary">Details</button>
                        <button class="btn btn-sm btn-outline-secondary">Reschedule</button>
                    </td>
                    </tr>

                }

            }
            else
            {
                <p>NO appoitments found!</p>
            }
        </tbody>
    </table>
</div>
