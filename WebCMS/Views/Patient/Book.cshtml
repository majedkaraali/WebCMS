@model WebCMS.Models.Appointment

<h2>Book an Appointment</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<form asp-action="Book" method="post">
    <div class="mb-3">
        <label asp-for="DoctorId" class="form-label">Select Doctor</label>
        <select asp-for="DoctorId" class="form-control" asp-items="ViewBag.Doctors">
            <option value="">-- Select a Doctor --</option>
        </select>
        <span asp-validation-for="DoctorId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="AppointmentDate" class="form-label">Appointment Date</label>
        <input asp-for="AppointmentDate" type="datetime-local" class="form-control" />
        <span asp-validation-for="AppointmentDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Book Appointment</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
